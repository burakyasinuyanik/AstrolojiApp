@model IEnumerable<HoroscopeCommentDto>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var horoscopeComment in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@horoscopeComment.Name</h5>

                    <!-- Pills Tabs -->
                    <ul class="nav nav-pills mb-3" id="pills-tab-@horoscopeComment.Id" role="tablist">

                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-@horoscopeComment.Id-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-home-@horoscopeComment.Id" type="button" role="tab"
                                aria-controls="pills-home-@horoscopeComment.Id" aria-selected="true">Günlük</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-@horoscopeComment.Id-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-profile-@horoscopeComment.Id" type="button" role="tab"
                                aria-controls="pills-profile-@horoscopeComment.Id" aria-selected="false">Aylık</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-contact-@horoscopeComment.Id-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-contact-@horoscopeComment.Id" type="button" role="tab"
                                aria-controls="pills-contact-@horoscopeComment.Id" aria-selected="false">Yıllık</button>
                        </li>
                    </ul>

                    <div class="tab-content pt-2" id="myTabContent-@horoscopeComment.Id">
                        <div class="tab-pane fade show active" id="pills-home-@horoscopeComment.Id" role="tabpanel"
                            aria-labelledby="pills-home-@horoscopeComment.Id-tab">
                            @horoscopeComment.Daily
                        </div>
                        <div class="tab-pane fade" id="pills-profile-@horoscopeComment.Id" role="tabpanel"
                            aria-labelledby="pills-profile-@horoscopeComment.Id-tab">
                            @horoscopeComment.Monthly
                        </div>
                        <div class="tab-pane fade" id="pills-contact-@horoscopeComment.Id" role="tabpanel"
                            aria-labelledby="pills-contact-@horoscopeComment.Id-tab">
                            @horoscopeComment.Annual
                        </div>
                    </div>
                    <div class="">
                        <a asp-action="Update" asp-route-id="@horoscopeComment.Id"
                            class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@horoscopeComment.Id" class="btn btn-danger btn-sm">Sil</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
