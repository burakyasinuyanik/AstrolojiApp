@model IEnumerable<SocialMediaDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Social Sayfası</h1>

<a href="/Admin/Social/Add"> yeni ekle</a>
<div class="d-flex justify-content-center">
    <table class="table table-bordered">
        <thead>
            <tr>
                
                <th scope="col">Social Name</th>
                <th scope="col">Social Url</th>
                <th scope="col">Social Icon</th>
                <th scope="col" >Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var social in Model)
            {
                <tr>
                    <th scope="row">@social.Name</th>
                    <td>@social.Url</td>
                    <td>@social.Icon</td>
                    
                    <td>
                        <a asp-action="Update" asp-route-id="@social.Id" class="btn btn-primary btn-sm">Düzenle</a>

                        <a asp-action="Delete" asp-route-id="@social.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>













































































