@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
}
<h1>Contact Sayfası</h1>
<a href="/Admin/Contact/Add"> yeni ekle</a>
<div class="d-flex justify-content-center">
    <table class="table table-bordered">
        <thead>
            <tr>

                <th scope="col">Adress</th>
                <th scope="col">Phone</th>
                <th scope="col">Contact Icon</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <th scope="row">@contact.Address</th>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.Icon</td>
                    

                    <td>
                        <a asp-action="Update" asp-route-id="@contact.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@contact.Id" class=" btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



























































































