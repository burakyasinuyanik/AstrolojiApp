@{
    ViewData["Title"] = "Index";
}

<h1>Social Sayfası</h1>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Social Form</h5>

        <!-- Simplified Form -->
        <form>
            <!-- Name Input -->
            <div class="row mb-3">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputName" placeholder="Enter Name">
                </div>
            </div>

            <!-- URL Input -->
            <div class="row mb-3">
                <label for="inputURL" class="col-sm-2 col-form-label">URL</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" id="inputURL" placeholder="Enter URL">
                </div>
            </div>

            <!-- Icon Input -->
            <div class="row mb-3">
                <label for="inputIcon" class="col-sm-2 col-form-label">Icon</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" id="inputIcon" accept="image/*">
                </div>
            </div>

            <!-- Submit and Reset Buttons -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Düzenle</button>
                <button type="reset" class="btn btn-secondary">Sil</button>
            </div>
        </form>
    </div>
</div>