@model HoroscopeComment
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Test/Index.cshtml";
}

<!-- Portfolio Details Section -->
<section id="Horoscope-details" class="portfolio-details section">

    <div class="container" data-aos="fade-up">

        <!-- Resim ve Başlık Bölümü -->
        <div class="text-center mb-5">
            <img src="@Model.Horoscope.Image" class="img-fluid" alt="@Model.Horoscope.Name Burcu"
                style="max-height: 400px;">
            <h1 class="mt-3">@Model.Horoscope.Name Burcu</h1>
        </div>

        <!-- Yorumlar Bölümü -->
        <div class="row justify-content-center gy-4">
            <!-- Günlük Yorum -->
            <div class="col-lg-10">
                <div class="testimonial-item mb-4">
                    <h2 class="text-center">Günlük Yorum</h2>
                    <div class="d-flex justify-content-center">
                        <i class="bi bi-quote quote-icon-left"></i>
                        <span class="px-3">@Model.Daily</span>
                        <i class="bi bi-quote quote-icon-right"></i>
                    </div>
                </div>
            </div>

            <!-- Aylık Yorum -->
            <div class="col-lg-10">
                <div class="testimonial-item mb-4">
                    <h2 class="text-center">Aylık Yorum</h2>
                    <div class="d-flex justify-content-center">
                        <i class="bi bi-quote quote-icon-left"></i>
                        <span class="px-3">@Model.Monthly</span>
                        <i class="bi bi-quote quote-icon-right"></i>
                    </div>
                </div>
            </div>

            <!-- Yıllık Yorum -->
            <div class="col-lg-10">
                <div class="testimonial-item">
                    <h2 class="text-center">Yıllık Yorum</h2>
                    <div class="d-flex justify-content-center">
                        <i class="bi bi-quote quote-icon-left"></i>
                        <span class="px-3">@Model.Annual</span>
                        <i class="bi bi-quote quote-icon-right"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section><!-- /Portfolio Details Section -->


<style>
    .portfolio-details {
        padding: 60px 0;
    }

    .portfolio-details img {
        border-radius: 10px;
        object-fit: cover;
    }

    .testimonial-item {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .testimonial-item h2 {
        font-size: 1.8rem;
        margin-bottom: 10px;
        color: #333;
    }

    .testimonial-item span {
        font-size: 1.1rem;
        color: #555;
        font-style: italic;
    }

    .testimonial-item .quote-icon-left,
    .testimonial-item .quote-icon-right {
        color: #ff5823;
        font-size: 1.5rem;
    }
</style>
