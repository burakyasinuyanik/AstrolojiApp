<section id="about" class="about section">

  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2>Neden Gezegen?</h2>
    <p>@Model.AppSetting.AboutText</p>
  </div><!-- End Section Title -->

  <div class="container">

    <div class="row gy-5">

     

      <div style="width: 100%; height: 100%;" class="col-xl-7" data-aos="fade-up" data-aos-delay="200">
        <h3 style="display: flex; text-align: center; justify-content: center; justify-items: center;">Burcunuz hangi
          grupta?</h3>
        <div style="width: 100%; height: 100%;" class="row gy-4">

          @foreach (var item in Model.HoroscopeGroups)
          {
            <div class="col-md-6 icon-box position-relative">
              <div class="image-container">
                <img src="@item.Image" alt="@item.Name" class="img-fluid horoscope-img">
              </div>
            
              <h4><a href="" class="stretched-link">@item.Name</a></h4>
              <p>@item.HoroscopeNames</p>
            </div>
          }

        </div>
      </div>

    </div>

  </div>

</section>

<style>
  .horoscope-img {
    width: 100%;
    /* Div'in genişliğine göre ayarlanır */
    height: auto;
    /* Oranları koruyarak boyutlandırma */
    object-fit: cover;
    /* Taşma durumunda görüntüyü kırpma */
    max-height: 200px;
    /* Maksimum yükseklik (isteğe bağlı) */
  }
</style>